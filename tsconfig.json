{
  "compilerOptions": {
    "target": "ES2020",                       // ✅ 启用 BigInt 支持
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,                  // ✅ 允许默认导入 fs/path
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["scripts", "test", "typechain"]
}
