{
    "compilerOptions": {
      "target": "ES2020",                        // ⬅️ 支持 BigInt（关键）
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "dist",                          // 可选：编译输出目录
      "rootDir": ".",                            // 可选：源代码根目录
      "types": ["node"],  
      "typeRoots": ["./types", "./node_modules/@types"]                        // 支持 Node.js API（如 fs）
    },
    
    "include": ["scripts", "contracts", "test"],
    "exclude": ["node_modules", "artifacts", "cache"]
  }
  